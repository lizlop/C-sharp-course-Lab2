<Window x:Class="Lab2.View.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2.View"
        mc:Ignorable="d"
        Title="MessageWindow" SizeToContent="WidthAndHeight">
    <Grid HorizontalAlignment="Stretch" Name="mypanel" Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBlock>
        <ScrollViewer Height="auto"  Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalScrollBarVisibility="Auto">
            <TextBlock FontSize="14" TextWrapping="Wrap" Padding="5"></TextBlock>
        </ScrollViewer>
        <Button Grid.Row="2" Content="Ok" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="14"  Click="ButtonClick" Margin="10"></Button>
    </Grid>
</Window>
